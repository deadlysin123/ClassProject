<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox alignment="center" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <ListView fx:id="employeeListView" prefWidth="248.0" />
    <VBox prefWidth="348.0">
        <HBox alignment="CENTER_LEFT">
            <Label alignment="CENTER" prefHeight="23.0" prefWidth="100" text="First Name" />
            <TextField fx:id="firstNameTextField" prefWidth="150" />
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets bottom="10.0" />
         </padding>
        </HBox>
        <HBox alignment="CENTER_LEFT">
            <Label alignment="CENTER" prefHeight="24.0" prefWidth="100" text="Last Name" />
            <TextField fx:id="lastNameTextField" prefWidth="150" />
        </HBox>
        <HBox alignment="CENTER_LEFT" prefHeight="34.0" prefWidth="348.0">
            <Label alignment="CENTER" prefWidth="100" text="Is Active" />
            <CheckBox fx:id="isActiveCheckBox" />
        </HBox>
        <HBox />
      <HBox prefHeight="41.0" prefWidth="298.0">
         <children>
            <Button fx:id="addEMP" mnemonicParsing="false" onAction="#add" prefHeight="118.0" prefWidth="126.0" text="Add Employee" />
            <Button fx:id="deleteEMP" onAction="#delete" mnemonicParsing="false" prefHeight="118.0" prefWidth="126.0" text="Delete Employee" />
            <Button fx:id="clearField" mnemonicParsing="false" onAction="#clear" prefHeight="118.0" prefWidth="126.0" text="Clear" />
         </children>
      </HBox>
    </VBox>

</HBox>
